#!/usr/bin/bash

if [[ $1 == -d ]]; then
    amixer -c 1 sset Master 2%- > /dev/null
elif [[ $1 == -i ]]; then
    amixer -c 1 sset Master 2%+ > /dev/null
elif [[ $1 == -m ]]; then
    amixer -c 1 sset Master toggle > /dev/null
else
    echo "options: -i, -d, -m"
fi

